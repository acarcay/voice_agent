# ===========================================
# Voice Agent - Production Configuration
# ===========================================

# LiveKit Configuration (Required)
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret

# Database Configuration (Required)
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/voice_agent
# Connection pool settings (Optional - defaults shown)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Redis Configuration (Required)
# Used for distributed state and caching
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# AI Service API Keys (Required)
ELEVEN_API_KEY=your_elevenlabs_key
GOOGLE_API_KEY=your_google_gemini_key

# Model Configuration (Optional)
STT_MODEL=deepgram/nova-2-streaming:tr
LLM_MODEL=gemini-1.5-flash

# Application Settings (Optional)
CLINIC_NAME=Sağlık Kliniği
LOG_LEVEL=INFO
LOG_FORMAT=json
SQL_ECHO=false

# Twilio Settings (Optional - for real phone calls)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
